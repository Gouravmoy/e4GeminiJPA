<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="medmon-derby"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>de.mukis.hsqldb.entity.Patient</class>
		<class>de.mukis.hsqldb.entity.Data</class>
		<class>de.mukis.hsqldb.entity.Therapy</class>
		<class>de.mukis.hsqldb.entity.TherapyResult</class>
		<class>de.mukis.hsqldb.entity.Sensor</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<!-- Embedded HSQLDB Login -->
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:medmon;create=true" />

			<property name="eclipselink.jdbc.read-connections.min"
				value="1" />
			<property name="eclipselink.jdbc.write-connections.min"
				value="1" />
			<property name="eclipselink.jdbc.batch-writing" value="JDBC" />

			<!-- Database Schema Creation -->
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="both" />
			<property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL.jdbc" /> 

			<!-- Disable Weaving -->
			<property name="eclipselink.weaving" value="false" />

			<!-- Logging -->
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.logging.session" value="false" />
			<property name="eclipselink.logging.thread" value="false" />

		</properties>
	</persistence-unit>

	<persistence-unit name="medmon-hsqldb"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>de.mukis.hsqldb.entity.Patient</class>
		<class>de.mukis.hsqldb.entity.Data</class>
		<class>de.mukis.hsqldb.entity.Therapy</class>
		<class>de.mukis.hsqldb.entity.TherapyResult</class>
		<class>de.mukis.hsqldb.entity.Sensor</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<!-- Embedded HSQLDB Login -->
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbc.JDBCDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:medmon-hsqldb" />

			<property name="eclipselink.jdbc.read-connections.min"
				value="1" />
			<property name="eclipselink.jdbc.write-connections.min"
				value="1" />
			<property name="eclipselink.jdbc.batch-writing" value="JDBC" />

			<!-- Database Schema Creation -->
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
			<!-- <property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL.jdbc" 
				/> -->

			<!-- Disable Weaving -->
			<property name="eclipselink.weaving" value="false" />

			<!-- Logging -->
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.logging.session" value="false" />
			<property name="eclipselink.logging.thread" value="false" />

		</properties>
	</persistence-unit>
</persistence>
